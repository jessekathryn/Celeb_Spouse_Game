
<div class="jumbotron" style="padding-bottom: 0; margin-bottom: 0;">
  <h1 style="padding-bottom: 0; margin-bottom: 0;">Welcome to Celebrity Trivia!</h1>

 

</div>

<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
  <ul class="nav navbar-nav">
    <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "nav-link" %>
      </li>
    <% else %>
      <li class="nav-item">
        <a class="nav-link" href="/celebrities">Login</a>
      </li>
    <% end %>
    
  </ul>
</nav>

<div class="container">
<% flash.each do |message_type, msg| %>
  <div class="alert alert-<%= message_type %>"><%= msg %></div>
<% end %>

<br>
<p> Who is <%= @celeb.name %> married to?</p>
<br><br>


<%= form_tag do %> 
  <%= hidden_field_tag :spouse_id, @celeb.id %>
  <% @random_spouses.each do |t| %>
    <%= radio_button_tag(:guess, t.id) %> <%= label_tag(t.name) %> <br>
  <% end %>
  <%= submit_tag("Guess!") %>

<% end %>

</div>